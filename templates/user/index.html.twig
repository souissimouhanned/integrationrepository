{% extends 'base-front.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}


    <h1>User index</h1>


    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{user.email}}</td>
                <td>
                    <a class="btn btn-outline-warning" href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a class="btn btn-outline-primary" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        {{ knp_pagination_render(users) }}


    <a class="btn btn-warning" href="{{ path('user_new') }}">Create new</a>
{% endblock %}
