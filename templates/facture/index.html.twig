{% extends 'base-front.html.twig' %}

{% block title %}Facture index{% endblock %}

{% block body %}

    <h1>Facture index</h1>

<h2>Search :</h2>

            <div class="sidebar-search">

                <div class="input-group custom-search-form">

                    <input type="text" id="search" class="form-control" placeholder="Search here">
                </div>
                <!-- /input-group -->
            </div>
            <ul class="nav" id="side-menu">
                <li>
                    <a href="#"> Factures<span class="fa arrow"></span></a>
                    <ul class="nav nav-second-level" id="entitiesNav">
                    </ul>
                </li>
            </ul><br><br><br><br>

            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

            <script type="text/javascript">
                jQuery(document).ready(function() {
                    var searchRequest = null;
                    $("#search").keyup(function() {
                        var minlength = 1;
                        var that = this;
                        var value = $(this).val();
                        var entitySelector = $("#entitiesNav").html('');
                        if (value.length >= minlength ) {
                            if (searchRequest != null)
                                searchRequest.abort();
                            searchRequest = $.ajax({
                                type: "GET",
                                url: "{{ path('ajax_search') }}",
                                data: {
                                    'q' : value
                                },
                                dataType: "text",
                                success: function(msg){
                                    //we need to check if the value is the same
                                    if (value===$(that).val()) {
                                        var result = JSON.parse(msg);
                                        $.each(result, function(key, arr) {
                                            $.each(arr, function(id, value) {
                                                if (key === 'factures') {
                                                    if (id !== 'error') {
                                                        console.log(value[1]);
                                                    } else {
                                                        entitySelector.append('<li class="errorLi">'+value+'</li>');
                                                    }
                                                }
                                            });
                                        });
                                    }
                                }
                            });
                        }
                    });
                });
            </script>



    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_user</th>
                <th>Prenom_user</th>
                <th>Matricule</th>
                <th>Code</th>
                <th>Prix</th>
                <th>Date_debut</th>
                <th>Date_fin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.nomUser }}</td>
                <td>{{ facture.prenomUser }}</td>
                <td>{{ facture.matricule }}</td>
                <td>{{ facture.code }}</td>
                <td>{{ facture.prix }}</td>
                <td>{{ facture.dateDebut ? facture.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ facture.dateFin ? facture.dateFin|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn btn-outline-warning" href="{{ path('facture_show', {'id': facture.id}) }}">show</a>
                    <a class="btn btn-outline-primary" href="{{ path('facture_edit', {'id': facture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
            <div class="navigation">
            {{ knp_pagination_render(factures) }}
        </div>
                        <a class="btn btn-warning" href="{{ path('facture_new') }}">Add</a>

{% endblock %}
