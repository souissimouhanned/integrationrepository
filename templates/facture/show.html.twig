{% extends 'base-front.html.twig' %}

{% block title %}Facture{% endblock %}

{% block body %}
    <h1>Facture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ facture.id }}</td>
            </tr>
            <tr>
                <th>Nom_user</th>
                <td>{{ facture.nomUser }}</td>
            </tr>
            <tr>
                <th>Prenom_user</th>
                <td>{{ facture.prenomUser }}</td>
            </tr>
            <tr>
                <th>Matricule</th>
                <td>{{ facture.matricule }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ facture.code }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ facture.prix }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ facture.dateDebut ? facture.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ facture.dateFin ? facture.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('facture_index') }}">back to list</a>

    <a href="{{ path('facture_edit', {'id': facture.id}) }}">edit</a>
    <a href="{{ path('pdf') }}">pdf</a>
    {{ include('facture/_delete_form.html.twig') }}
{% endblock %}
